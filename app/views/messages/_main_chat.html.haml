  .main_chat__message__form
    .form.main_chat__message__form__content
      = form_for [@group, @message] do |f|
        =f.text_field :content, class: 'main_chat__message__form__input__box__text', placeholder: 'type a message'
      .form__input__box
        = f.label :image, class: 'main_chat__message__form__input__box__image' do
        = icon('fas', 'image')
        = f .file_field :image, class: 'main_chat__message__form__input__box__image__file'
      = f. submit 'Send', class: 'main_chat__message__form__submit__btn'
        